<h2> <%= @category.category %>'s Memo </h2>

<% @memos.each do |memo| %>
    <div class="col-sm-4">
        <div class="panel panel-warning">
            <div class="panel-heading">
                <h4><%=memo.title %></h4>
                <p><%=memo.category.category%></p>
                <div class="button">
                    <a href="/delete/<%= memo.id %>" data-method="delete"><span class="glyphicon glyphicon-trash"></span></a>
                    <a href="edit/<%= memo.id %>"><span class="glyphicon glyphicon-edit"></span></a>
                </div>
                <div class="panel-body">
                    <%=memo.content %>
                </div>
            </div>
        </div>
    </div>
<% end %>
    


