<h1>メモ編集ページ</h1>

<%= form_tag("/update/"+@memo.id.to_s,:method=>:patch) do %>
    <div class="form-group">
        <%= label_tag "form_title", "Title" %>
        <%= text_field :memos, :title, id:"form_title", class:"form-control",value: @memo.title%>
    </div>
    
    <div class="form-group">
        <%= label_tag "form_content", "Content" %>
        <%= text_field :memos, :content, id:"form_content", class:"form-control",value: @memo.content%>
    </div>
    
    <%= submit_tag "更新" ,class:"btn btn-primary" %>
<% end %>